<section id="create-section" class="">
    <h1 class="item">Login</h1>
    <main class="item padded align-centre">
        <form action="/auth/login" method="post" class="layout left large">
            {{#if error}}
            <div class="error-box">
                {{#each error}}
                <p>{{this}}</p>
                {{/each}}
            </div>
            {{/if}}
            <div class="aligned">
                <label><span>Username: </span><input type="text" name="username"></label>
                <label><span>Password: </span><input type="password" name="password"></label>
            </div>

            <input class="cta action" type="submit" value="Login">

        </form>

        <a href="/catalog">Back to Catalog</a>
        <a href="/">Back to Home</a>

    </main>

</section>